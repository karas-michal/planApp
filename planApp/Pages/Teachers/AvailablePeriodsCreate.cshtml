@page
@model planApp.Pages.Teachers.AvailablePeriodsCreateModel

@{
    ViewData["Title"] = "Dodaj";
}

<h2>Dodaj</h2>

<hr />
<h4>Dostępność</h4>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div> 
            <input type="hidden" asp-for="TeacherID" /> 
            <div class="form-group">
                <label asp-for="AvailablePeriod.Day" class="control-label"></label>
                <select asp-for="AvailablePeriod.Day" asp-items="@Html.GetEnumSelectList<Models.Day>()" class="form-control"></select>
                <span asp-validation-for="AvailablePeriod.Day" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AvailablePeriod.Start" class="control-label"></label>
                <input asp-for="AvailablePeriod.Start" class="form-control" /> 
                <span asp-validation-for="AvailablePeriod.Start" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AvailablePeriod.End" class="control-label"></label>
                <input asp-for="AvailablePeriod.End" class="form-control" /> 
                <span asp-validation-for="AvailablePeriod.End" class="text-danger"></span>
            </div>
            <div class="form-group"> 
                <input type="submit" value="Dodaj" class="btn btn-default" />
            </div> 
        </form>
    </div>
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.TeacherID">Wróć</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
