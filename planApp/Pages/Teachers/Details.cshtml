@page
@model planApp.Pages.Teachers.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Teacher</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Teacher.FirstName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Teacher.FirstName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Teacher.LastName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Teacher.LastName)
        </dd>
    </dl>
</div>
<div class="row">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Teacher.Subjects[0].Name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Teacher.Subjects)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <a asp-page="../Subjects/Details" asp-route-id="@item.ID">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="row">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Teacher.Availability.First().Day)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Teacher.Availability.First().Period)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Teacher.Availability)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Day)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Period)
                    </td>
                    <td>
                        <a asp-page="./AvailablePeriodsDetails" asp-route-id="@item.ID">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Teacher.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
