@page
@model planApp.Pages.Teachers.DetailsModel

@{
    ViewData["Title"] = "Szczegóły";
}

<h2>Szczegóły</h2>

<hr />
<h4>Nauczyciel</h4>
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Teacher.FirstName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Teacher.FirstName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Teacher.LastName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Teacher.LastName)
        </dd>
    </dl>
</div>
<hr />
<h4>@Html.DisplayNameFor(model => model.Teacher.Subjects)</h4>
<div class="row">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Teacher.Subjects[0].Subject.Name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Teacher.Subjects)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Subject.Name)
                    </td>
                    <td>
                        <a asp-page="../Subjects/Details" asp-route-id="@item.Subject.ID">Szczegóły</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<hr />
<h4>@Html.DisplayNameFor(model => model.Teacher.Availability)</h4>
<div class="row">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Teacher.Availability[0].Day)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Teacher.Availability[0].Start)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Teacher.Availability[0].End)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Teacher.Availability)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Day)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Start)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.End)
                    </td>
                    <td>
                        <a asp-page="./AvailablePeriodsDetails" asp-route-id="@item.ID" asp-route-teacherId="@Model.Teacher.ID">Szczegóły</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Teacher.ID">Edytuj</a> |
    <a asp-page="./Index">Wróć</a>
</div>
