@page
@model planApp.Pages.Grades.EditModel

@{
    ViewData["Title"] = "Edytuj";
}

<h2>Edytuj</h2>

<hr />
<h4>Ocena</h4>
<div class="row">
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Grade.Subject.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Grade.Subject.Name)
        </dd>
    </dl>
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Grade.ID" />
            <input type="hidden" asp-for="StudentID" />
            <div class="form-group">
                <label asp-for="Grade.Value" class="control-label"></label>
                <input asp-for="Grade.Value" class="form-control" />
                <span asp-validation-for="Grade.Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.StudentID">Wróć</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
